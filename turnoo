def update(self, tablero, azules, blancos):
        font = pygame.font.Font("LemonMilk.otf", 40)
        for f in range(8):
            for c in range(8):
                if tablero[f][c] != 0:
                    self.ponerpieza((f, c), tablero[f][c])
                    turnoo = self.font.render("Cambio de turno", True, self.blanco)
                    turnoopos = turnoo.get_rect(centerx=self.screen.get_width() / 2, centery=300)
                    self.screen.blit(turnoo,turnoopos)
        azulesstr = '%02d ' % int(azules)
        blancosstr = '%02d ' % int(blancos)
        self.mostrarpuntaje(azulesstr, blancosstr)
        pygame.display.flip()
